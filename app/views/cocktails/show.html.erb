<h1>Cocktails#show</h1>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<p> <%= link_to 'add a new dose', new_cocktail_dose_path(@cocktail)  %>
</p>

<% if @cocktail.photo.attached?  %>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<% @cocktail.doses.each do |dose| %>
<li class="list-group-item">
      <%= dose.description %>
      <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
<% end %>
